<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="34dp"
        android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/client_card_number"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="  Karta raqam"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="40dp"/>

            <TextView
                android:layout_margin="10dp"
                android:id="@+id/client_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abdullayev Akbar"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/price"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint=" Pul miqdorini kiriting..."
                android:inputType="number"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="40dp"/>
            <TextView
                android:layout_margin="10dp"
                android:id="@+id/total_price_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hisobingizda "/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/paymentButton"
                android:text="to'lov"
                android:textSize="18dp"
                android:enabled="false"
                android:layout_margin="30dp"
                android:backgroundTint="@color/purple"
                app:cornerRadius = "20dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>